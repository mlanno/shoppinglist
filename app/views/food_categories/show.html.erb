<div>
  <div>
    <h1>
      Food category #<%= @the_food_category.id %> details
    </h1>

    <div>
      <div>
        <a href="/food_categories">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_food_category/<%= @the_food_category.id %>">
          Delete food category
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Category
      </dt>
      <dd>
        <%= @the_food_category.category %>
      </dd>

      <dt>
        Aisle
      </dt>
      <dd>
        <%= @the_food_category.aisle %>
      </dd>

      <dt>
        List items count
      </dt>
      <dd>
        <%= @the_food_category.list_items_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit food category
    </h2>

    <form action="/modify_food_category/<%= @the_food_category.id %>"  method="post" >
      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category" value="<%= @the_food_category.category %>">
      </div>

      <div>
        <label for="aisle_box">
          Aisle
        </label>

        <input type="text" id="aisle_box" name="query_aisle" value="<%= @the_food_category.aisle %>">
      </div>

      <div>
        <label for="list_items_count_box">
          List items count
        </label>

        <input type="text" id="list_items_count_box" name="query_list_items_count" value="<%= @the_food_category.list_items_count %>">
      </div>

      <button>
        Update food category
      </button>
    </form>
  </div>
</div>

<hr>
