<div>
  <div>
    <h1>
      Shopping list #<%= @the_shopping_list.id %> details
    </h1>

    <div>
      <div>
        <a href="/shopping_lists">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_shopping_list/<%= @the_shopping_list.id %>">
          Delete shopping list
        </a>
      </div>
    </div>

    <dl>
      <dt>
        List name
      </dt>
      <dd>
        <%= @the_shopping_list.list_name %>
      </dd>

      <dt>
        Number of items
      </dt>
      <dd>
        <%= @the_shopping_list.list_items_count %>
      </dd>

      <dt>
        Shared with
      </dt>
      <dd>
        <%= @the_shopping_list.list_collaborations_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_shopping_list.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_shopping_list.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit shopping list
    </h2>

    <form action="/modify_shopping_list/<%= @the_shopping_list.id %>"  method="post" >
      <div>
        <label for="list_name_box">
          List name
        </label>

        <input type="text" id="list_name_box" name="query_list_name" value="<%= @the_shopping_list.list_name %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_shopping_list.user_id %>">
      </div>

      <div>
        <label for="list_items_count_box">
          List items count
        </label>

        <input type="text" id="list_items_count_box" name="query_list_items_count" value="<%= @the_shopping_list.list_items_count %>">
      </div>

      <div>
        <label for="list_collaborations_count_box">
          List collaborations count
        </label>

        <input type="text" id="list_collaborations_count_box" name="query_list_collaborations_count" value="<%= @the_shopping_list.list_collaborations_count %>">
      </div>

      <button>
        Update shopping list
      </button>
    </form>
  </div>
</div>

<hr>
